<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Tailwind CSS CDN -->
     <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <style>
        /* Custom font for a clean look */
        body {
            font-family: "Inter", sans-serif;
        }
        /* Custom styles for a subtle gradient background */
        .gradient-bg {
            background: linear-gradient(to right bottom, #a78bfa, #8b5cf6); /* Purple gradient */
        }
    </style>
</head>
<body class="gradient-bg min-h-screen flex flex-col p-0 m-0">
    <!-- The included navigation bar will now naturally sit at the top -->
    <%- include('../nav')%>

    <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-lg transform transition-all duration-300 hover:scale-[1.01] mx-auto mt-8 mb-8">
        <!-- Profile Header Section -->
        <div class="flex flex-col items-center mb-8">
            <!-- Profile Picture Placeholder -->
            <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden shadow-inner mb-4">
                <!-- You can replace this with an actual image -->
                <!-- Display first letter of first name and last name if user.firstname and user.lastname exist -->
                <img src="https://placehold.co/96x96/cbd5e1/4b5563?text=<%= user && user.firstname ? user.firstname.charAt(0).toUpperCase() : '' %><%= user && user.lastname ? user.lastname.charAt(0).toUpperCase() : '' %>" alt="Profile Picture" class="object-cover w-full h-full rounded-full">
            </div>
            <h1 class="text-4xl font-extrabold text-gray-900 mb-2 text-center">Your Profile</h1>
            <p class="text-gray-600 text-lg text-center">Manage your personal information</p>
        </div>

        <!-- Profile Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <!-- First Name Section -->
            <div>
                <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-1">First Name</label>
                <input
                    type="text"
                    id="firstName"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                    value="Arjun"
                    readonly
                />
            </div>

            <!-- Last Name Section -->
            <div>
                <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-1">Last Name</label>
                <input
                    type="text"
                    id="lastName"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                    value="Thakur"
                    readonly
                />
            </div>

            <!-- Gmail Section -->
            <div>
                <label for="gmail" class="block text-sm font-semibold text-gray-700 mb-1">Gmail</label>
                <input
                    type="email"
                    id="gmail"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                    value="arjun2344@gmail.com"
                    readonly
                />
            </div>

            <!-- Password Section (Display only, for security) -->
            <div>
                <label for="password" class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
                <input
                    type="password"
                    id="password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                    value="********"
                    readonly
                />
                <p class="text-xs text-gray-500 mt-1">For security, password is not fully displayed.</p>
            </div>

            <!-- Guest or Host Type Section -->
            <div>
                <label for="userType" class="block text-sm font-semibold text-gray-700 mb-1">User Type</label>
                <input
                    type="text"
                    id="userType"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                    value="Guest"
                    readonly
                />
            </div>

            <!-- Contact Number Section -->
            <div>
                <label for="contactNumber" class="block text-sm font-semibold text-gray-700 mb-1">Contact Number</label>
                <input
                    type="tel"
                    id="contactNumber"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200"
                    value="+9158922632131"
                    readonly
                />
            </div>
        </div>

        <!-- Action Button -->
        <div class="text-center mt-6">
            <button class="bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 text-white font-bold py-3 px-8 rounded-full shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105 focus:outline-none focus:ring-4 focus:ring-purple-300">
                Edit Profile
            </button>
        </div>
    </div>
</body>
</html>